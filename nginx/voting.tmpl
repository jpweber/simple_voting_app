# Generated by confd


server {

    listen 80;
    server_name _;
    {{ range $dir := lsdir "/services" }}

        {{ $service := base $dir}}

        {{if eq $service "vote"}}
        set $vote_endpoint vote.service.consul:3000;
        location /{{$service}} {
        rewrite ^/(.*) / break;
            proxy_pass http://$vote_endpoint;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Host            $host;
            proxy_set_header Connection "upgrade";
            proxy_set_header X-Request-Id $request_id;
        }
        location / {
            proxy_pass http://$vote_endpoint;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Host            $host;
            proxy_set_header Connection "upgrade";
            proxy_set_header X-Request-Id $request_id;
        }
        {{end}}

        {{if eq $service "results"}}
        set $results_endpoint results.service.consul:8000;
        location /{{$service}} {
            rewrite ^/(.*) / break;
            proxy_pass http://$results_endpoint;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Host            $host;
            proxy_set_header Connection "upgrade";
            proxy_set_header X-Request-Id $request_id;
        }
        {{end}}

    {{end}}
}